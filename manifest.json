{
    "manifest_version": 3,
    "name": "YouTube Video Ad Skipper",
    "version": "1.0",
    "description": "Skip video ads on YouTube automatically, without the 5-second delay, for a smoother viewing experience.",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/skip.png",
            "48": "images/skip.png",
            "128": "images/skip.png"
        }
    },
    "icons": {
        "16": "images/skip.png",
        "48": "images/skip.png",
        "128": "images/skip.png"
    }
}



